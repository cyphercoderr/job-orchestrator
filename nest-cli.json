{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "tsConfigPath": "tsconfig.json"
  },
  "projects": {
    "job-api": {
      "type": "application",
      "root": "src/job-api",
      "entryFile": "main",
      "sourceRoot": "src/job-api"
    },
    "job-scheduler": {
      "type": "application",
      "root": "src/job-scheduler",
      "entryFile": "main",
      "sourceRoot": "src/job-scheduler"
    },
    "agent-runner": {
      "type": "application",
      "root": "src/agent-runner",
      "entryFile": "main",
      "sourceRoot": "src/agent-runner"
    }
  }
}
